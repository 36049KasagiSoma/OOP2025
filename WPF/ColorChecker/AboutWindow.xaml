<Window x:Class="ColorChecker.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Icon="/ColorChecker;component/Image/mainIcon.png"
        Title="このアプリについて" Height="320" Width="570"
        ResizeMode="NoResize">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock FontSize="36" FontWeight="Bold" Margin="10" HorizontalAlignment="Center">
                <InlineUIContainer>
                <Image Width="72"
                       Source="/ColorChecker;component/Image/mainIcon.png"/>
            </InlineUIContainer>
                <Run Text="ColorChecker" BaselineAlignment="Center"/>
            </TextBlock>
            <TextBlock TextWrapping="Wrap" Margin="10" FontSize="16">
            <Run Text="Version 1.0.0"/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="ColorChecker は、ユーザーがRGBで色を選択して表示・保存できるアプリケーションです。"/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="Developed by Soma Kasagi"/>
            <LineBreak/>
            <Run Text="© 2025 Soma Kasagi. All rights reserved."/>
            </TextBlock>
        </StackPanel>
        <Button Content="OK" Width="80" Height="30" HorizontalAlignment="Right" Margin="10" Click="Button_Click"/>
    </DockPanel>
</Window>
