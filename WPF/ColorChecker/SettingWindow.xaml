<Window x:Class="ColorChecker.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Icon="/ColorChecker;component/Image/mainIcon.png"
        Title="設定" Height="190" Width="360"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" FontSize="16"  Content="STOCK設定" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <Label Grid.Row="1" Grid.Column="0" FontSize="12"  Content="行数" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <Label Grid.Row="2" Grid.Column="0" FontSize="12"  Content="列数" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5"/>
        <TextBlock x:Name="rowValueText" Grid.Row="1" Grid.Column="1" FontSize="24" Text="{Binding ElementName=rowSlider, Path=Value}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="columnValueText" Grid.Row="2" Grid.Column="1" FontSize="24" Text="{Binding ElementName=columnSlider, Path=Value}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Slider x:Name="rowSlider" Grid.Row="1" Grid.Column="2" Minimum="1" Maximum="9" Value="6" TickFrequency="1" IsSnapToTickEnabled="True" Margin="20,0,30,0" VerticalAlignment="Center"/>
        <Slider x:Name="columnSlider" Grid.Row="2" Grid.Column="2" Minimum="1" Maximum="9" Value="5" TickFrequency="1" IsSnapToTickEnabled="True" Margin="20,0,30,0" VerticalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="0,10,10,10">
            <Button Content="キャンセル" Width="80" Height="30" Margin="5,0" Click="Cancel_Button_Click"/>
            <Button Content="OK" Width="80" Height="30" Margin="5,0" Click="OK_Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
