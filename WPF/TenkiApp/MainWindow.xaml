<Window x:Class="TenkiApp.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="天気予報アプリ" Height="600" Width="900" Background="#F5F7FA" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- スタイル定義 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#357ABD" />
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderBrush" Value="#D1D5DB" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CardPanel" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Opacity="0.1" BlurRadius="10" ShadowDepth="2" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" MinWidth="300" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- ヘッダー部分 -->
        <Border Grid.Row="0" Grid.Column="0" Background="White" Padding="20" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="📍" FontSize="24" Margin="0,0,10,0" />
                    <TextBlock Text="都市:" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" />
                    <ComboBox x:Name="cmbCity" Width="150" Height="35" FontSize="14" VerticalContentAlignment="Center">
                        <ComboBoxItem Content="-" Tag="" />
                        <ComboBoxItem Content="札幌" Tag="43.0642,141.3469" />
                        <ComboBoxItem Content="仙台" Tag="38.2682,140.8694" />
                        <ComboBoxItem Content="東京" Tag="35.6762,139.6503" IsSelected="True" />
                        <ComboBoxItem Content="横浜" Tag="35.4437,139.6380" />
                        <ComboBoxItem Content="名古屋" Tag="35.1815,136.9066" />
                        <ComboBoxItem Content="京都" Tag="35.0116,135.7681" />
                        <ComboBoxItem Content="大阪" Tag="34.6937,135.5023" />
                        <ComboBoxItem Content="神戸" Tag="34.6901,135.1955" />
                        <ComboBoxItem Content="広島" Tag="34.3853,132.4553" />
                        <ComboBoxItem Content="福岡" Tag="33.5904,130.4017" />
                        <ComboBoxItem Content="那覇" Tag="26.2124,127.6809" />
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0" VerticalAlignment="Center">
                    <TextBlock Text="緯度:" FontSize="14" VerticalAlignment="Center" Margin="0,0,5,0" />
                    <TextBox x:Name="txtLatitude" Width="80" Style="{StaticResource ModernTextBox}" Text="35.6762" IsReadOnly="True" />
                    <TextBlock Text="経度:" FontSize="14" VerticalAlignment="Center" Margin="15,0,5,0" />
                    <TextBox x:Name="txtLongitude" Width="80" Style="{StaticResource ModernTextBox}" Text="139.6503" IsReadOnly="True" />
                </StackPanel>
                <Button Grid.Column="4" Content="天気を取得" x:Name="btnGetWeather" Style="{StaticResource ModernButton}" />
            </Grid>
        </Border>
        <!-- メインコンテンツ -->
        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- 現在の天気情報 -->
                <Border Grid.Row="0" Style="{StaticResource CardPanel}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock x:Name="txtCurrentCity" Text="東京" FontSize="32" FontWeight="Bold" Foreground="#1F2937" />
                            <TextBlock x:Name="txtCurrentDate" Text="2024年11月20日" FontSize="16" Foreground="#6B7280" Margin="0,5,0,0" />
                            <TextBlock x:Name="txtWeatherDescription" Text="晴れ" FontSize="18" Foreground="#4B5563" Margin="0,10,0,0" />
                        </StackPanel>
                        <!-- 天気画像 -->
                        <Image x:Name="imgCurrentWeather" Grid.Column="1" Width="100" Height="100" Margin="20,0" VerticalAlignment="Center" />
                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <TextBlock x:Name="txtTemperature" Text="--°C" FontSize="64" FontWeight="Bold" Foreground="#4A90E2" HorizontalAlignment="Right" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                                <StackPanel Margin="0,0,20,0">
                                    <TextBlock Text="最高" FontSize="12" Foreground="#6B7280" />
                                    <TextBlock x:Name="txtMaxTemp" Text="--°C" FontSize="18" FontWeight="SemiBold" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="最低" FontSize="12" Foreground="#6B7280" />
                                    <TextBlock x:Name="txtMinTemp" Text="--°C" FontSize="18" FontWeight="SemiBold" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Border>
                <!-- 詳細情報グリッド -->
                <UniformGrid Grid.Row="1" Columns="4" Margin="0,10,0,0">
                    <!-- 湿度 -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="💧" FontSize="24" Margin="0,0,0,10" />
                            <TextBlock Text="湿度" FontSize="14" Foreground="#6B7280" />
                            <TextBlock x:Name="txtHumidity" Text="--%" FontSize="24" FontWeight="Bold" Foreground="#1F2937" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>
                    <!-- 風速 -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="💨" FontSize="24" Margin="0,0,0,10" />
                            <TextBlock Text="風速" FontSize="14" Foreground="#6B7280" />
                            <TextBlock x:Name="txtWindSpeed" Text="-- km/h" FontSize="24" FontWeight="Bold" Foreground="#1F2937" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>
                    <!-- 降水確率 -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="☔" FontSize="24" Margin="0,0,0,10" />
                            <TextBlock Text="降水確率" FontSize="14" Foreground="#6B7280" />
                            <TextBlock x:Name="txtPrecipitation" Text="--%" FontSize="24" FontWeight="Bold" Foreground="#1F2937" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>
                    <!-- 気圧 -->
                    <Border Style="{StaticResource CardPanel}">
                        <StackPanel>
                            <TextBlock Text="🌡️" FontSize="24" Margin="0,0,0,10" />
                            <TextBlock Text="気圧" FontSize="14" Foreground="#6B7280" />
                            <TextBlock x:Name="txtPressure" Text="-- hPa" FontSize="24" FontWeight="Bold" Foreground="#1F2937" Margin="0,5,0,0" />
                        </StackPanel>
                    </Border>
                </UniformGrid>
                <!-- 7日間予報 -->
                <Border Grid.Row="2" Style="{StaticResource CardPanel}" Margin="10,20,10,10">
                    <StackPanel>
                        <TextBlock Text="📅 7日間の予報" FontSize="20" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,20" />
                        <ListBox x:Name="lstForecast" BorderThickness="0" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="10" Margin="0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="90" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Date}" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" />
                                            <!-- 天気画像を追加 -->
                                            <Image Grid.Column="1" Source="{Binding WeatherImage}" Width="40" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            <TextBlock Grid.Column="2" Text="{Binding Description}" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="3" Text="{Binding MaxTemp}" FontSize="16" FontWeight="Bold" Foreground="#EF4444" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            <TextBlock Grid.Column="4" Text="{Binding MinTemp}" FontSize="16" FontWeight="Bold" Foreground="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
        <!-- 日本地図パネル -->
        <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Background="White" BorderBrush="#E5E7EB" BorderThickness="1,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!-- 地図タイトル -->
                <Border Grid.Row="0" Background="#F9FAFB" Padding="20,15" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                    <TextBlock Text="🗾 日本地図" FontSize="18" FontWeight="Bold" Foreground="#1F2937" />
                </Border>
                <!-- 地図キャンバス -->
                <Canvas x:Name="MapCanvas" Grid.Row="1" Background="#E0F2FE" Margin="10" ClipToBounds="True" MouseLeftButtonDown="MapCanvas_MouseLeftButtonDown"></Canvas>
            </Grid>
        </Border>
        <!-- ローディングオーバーレイ -->
        <Grid Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="LoadingOverlay" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="10" Width="200" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="48" HorizontalAlignment="Center" />
                    <TextBlock Text="読み込み中..." FontSize="16" Margin="0,20,0,0" HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>