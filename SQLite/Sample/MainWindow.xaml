<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sample"
        mc:Ignorable="d"
        Closing="Window_Closing"
        Title="MainWindow" Width="300" SizeToContent="Height">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="NameTextBox"/>
            <TextBox x:Name="PhoneTextBox"/>
            <Button x:Name="SaveButton" Click="SaveButton_Click" Content="保存"/>
            <Button x:Name="ReadButton" Click="ReadButton_Click" Content="取得"/>
            <ListView x:Name="PersonListView" Margin="0,5,0,0" Height="600">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Id}"/>
                            <TextBlock Text="{Binding Name}" FontSize="15"/>
                            <TextBlock Text="{Binding Phone}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>

</Window>
