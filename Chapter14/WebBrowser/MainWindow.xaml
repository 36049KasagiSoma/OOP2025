<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebBrowser"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="WebBrowser.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- アドレスバー -->
            <RowDefinition Height="Auto"/>
            <!--  -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="5">
            <ProgressBar x:Name="LoadingProgressBar" Margin="0,2,0,0" Height="2" DockPanel.Dock="Bottom"/>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button Content="戻る" Width="60" Margin="0,0,5,0" Click="BackButton_Click"/>
                <Button Content="進む" Width="60" Margin="0,0,5,0" Click="ForwordButton_Click"/>
            </StackPanel>
            <Button Content="移動" Width="60" Click="GoButton_Click" DockPanel.Dock="Right"/>
            <TextBox x:Name="AddressBar" Margin="0,0,5,0" KeyDown="AddressBar_KeyDown"/>
        </DockPanel>
        <Wpf:WebView2 x:Name="webView" Margin="5" Grid.Row="2"/>
    </Grid>
</Window>
