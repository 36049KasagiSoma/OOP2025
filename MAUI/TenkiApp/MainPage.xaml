<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="TenkiApp.MainPage"
             Title="天気予報アプリ">

    <ContentPage.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource ButtonBackground}, Dark={StaticResource ButtonBackgroundDark}}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="CornerRadius" Value="6" />
            <Setter Property="Padding" Value="20,10" />
        </Style>

        <Style x:Key="CardFrame" TargetType="Border">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}" />
            <Setter Property="StrokeShape" Value="RoundRectangle 12" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Shadow">
                <Setter.Value>
                    <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="2,2" />
                </Setter.Value>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundColor}, Dark={StaticResource BackgroundColorDark}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ヘッダー部分 -->
        <Border Grid.Row="0" Grid.Column="0" 
                BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}" 
                StrokeShape="Rectangle" 
                Padding="20" 
                Stroke="Transparent"
                StrokeThickness="0">
            <Border.Shadow>
                <Shadow Brush="Black" Opacity="0.05" Radius="2" Offset="0,1" />
            </Border.Shadow>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <HorizontalStackLayout Grid.Column="0" Spacing="10">
                    <Label Text="📍" FontSize="24" VerticalOptions="Center" />
                    <Label Text="都市:" 
                           FontSize="16" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                    <Picker x:Name="cmbCity" 
                            WidthRequest="180" 
                            FontSize="14"
                            SelectedIndexChanged="CmbCity_SelectedIndexChanged" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" 
                                       Spacing="10" 
                                       HorizontalOptions="Center">
                    <Label Text="緯度:" 
                           FontSize="14" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                    <Entry x:Name="txtLatitude" 
                           WidthRequest="110" 
                           Text="35.6762" 
                           IsReadOnly="True"
                           FontSize="14" />
                    <Label Text="経度:" 
                           FontSize="14" 
                           VerticalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                    <Entry x:Name="txtLongitude" 
                           WidthRequest="110" 
                           Text="139.6503" 
                           IsReadOnly="True"
                           FontSize="14" />
                </HorizontalStackLayout>

                <Button Grid.Column="2" 
                        Text="天気を取得" 
                        x:Name="btnGetWeather" 
                        Style="{StaticResource ModernButton}"
                        Clicked="BtnGetWeather_Clicked" />
            </Grid>
        </Border>

        <!-- メインコンテンツ -->
        <ScrollView Grid.Row="1" Grid.Column="0">
            <VerticalStackLayout Padding="20" Spacing="10">

                <!-- 現在の天気情報 -->
                <Border Style="{StaticResource CardFrame}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Grid.Column="0">
                            <Label x:Name="txtCurrentCity" 
                                   Text="--" 
                                   FontSize="32" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                            <Label x:Name="txtCurrentDate" 
                                   Text="2024年11月20日" 
                                   FontSize="16" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" 
                                   Margin="0,5,0,0" />
                            <Label x:Name="txtWeatherDescription" 
                                   Text="晴れ" 
                                   FontSize="18" 
                                   TextColor="{AppThemeBinding Light=#4B5563, Dark={StaticResource TextSecondaryDark}}" 
                                   Margin="0,10,0,0" />
                        </VerticalStackLayout>

                        <Image x:Name="imgCurrentWeather" 
                               Grid.Column="1" 
                               WidthRequest="100" 
                               HeightRequest="100" 
                               Margin="20,0" 
                               VerticalOptions="Center" />

                        <VerticalStackLayout Grid.Column="2" 
                                             HorizontalOptions="End">
                            <Label x:Name="txtTemperature" 
                                   Text="--°C" 
                                   FontSize="64" 
                                   FontAttributes="Bold" 
                                   TextColor="#4A90E2" 
                                   HorizontalOptions="End" />
                            <HorizontalStackLayout HorizontalOptions="End" 
                                                   Spacing="20" 
                                                   Margin="0,10,0,0">
                                <VerticalStackLayout>
                                    <Label Text="最高" 
                                           FontSize="12" 
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
                                    <Label x:Name="txtMaxTemp" 
                                           Text="--°C" 
                                           FontSize="18" 
                                           FontAttributes="Bold" />
                                </VerticalStackLayout>
                                <VerticalStackLayout>
                                    <Label Text="最低" 
                                           FontSize="12" 
                                           TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
                                    <Label x:Name="txtMinTemp" 
                                           Text="--°C" 
                                           FontSize="18" 
                                           FontAttributes="Bold" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </Border>

                <!-- 詳細情報グリッド -->
                <Grid ColumnSpacing="10" RowSpacing="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout>
                            <Label Text="💧" FontSize="24" Margin="0,0,0,10" />
                            <Label Text="湿度" 
                                   FontSize="14" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
                            <Label x:Name="txtHumidity" 
                                   Text="--%"  
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" 
                                   Margin="0,5,0,0" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="1" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout>
                            <Label Text="💨" FontSize="24" Margin="0,0,0,10" />
                            <Label Text="風速 (km/h)" 
                                   FontSize="14" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
                            <Label x:Name="txtWindSpeed" 
                                   Text="--" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" 
                                   Margin="0,5,0,0" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="2" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout>
                            <Label Text="☔" FontSize="24" Margin="0,0,0,10" />
                            <Label Text="降水確率" 
                                   FontSize="14" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
                            <Label x:Name="txtPrecipitation" 
                                   Text="--%"  
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" 
                                   Margin="0,5,0,0" />
                        </VerticalStackLayout>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource CardFrame}">
                        <VerticalStackLayout>
                            <Label Text="🌡️" FontSize="24" Margin="0,0,0,10" />
                            <Label Text="気圧 (hPa)" 
                                   FontSize="14" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextSecondary}, Dark={StaticResource TextSecondaryDark}}" />
                            <Label x:Name="txtPressure" 
                                   Text="--" 
                                   FontSize="24" 
                                   FontAttributes="Bold" 
                                   TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" 
                                   Margin="0,5,0,0" />
                        </VerticalStackLayout>
                    </Border>
                </Grid>

                <!-- 7日間予報 -->
                <Border Style="{StaticResource CardFrame}" Margin="10,20,10,10">
                    <VerticalStackLayout>
                        <Label Text="📅 7日間の予報" 
                               FontSize="20" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" 
                               Margin="0,0,0,20" />
                        <CollectionView x:Name="lstForecast">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" 
                                            Margin="0,5" 
                                            Stroke="#E5E7EB"
                                            StrokeThickness="1"
                                            StrokeShape="Rectangle">
                                        <Grid ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="90" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="100" />
                                            </Grid.ColumnDefinitions>

                                            <Label Grid.Column="0" 
                                                   Text="{Binding Date}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold" 
                                                   VerticalOptions="Center" />
                                            <Image Grid.Column="1" 
                                                   Source="{Binding WeatherImage}" 
                                                   WidthRequest="40" 
                                                   HeightRequest="40" 
                                                   VerticalOptions="Center" 
                                                   HorizontalOptions="Center" />
                                            <Label Grid.Column="2" 
                                                   Text="{Binding Description}" 
                                                   FontSize="14" 
                                                   TextColor="#6B7280" 
                                                   VerticalOptions="Center" />
                                            <Label Grid.Column="3" 
                                                   Text="{Binding MaxTemp}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold" 
                                                   TextColor="#EF4444" 
                                                   HorizontalOptions="Center" 
                                                   VerticalOptions="Center" />
                                            <Label Grid.Column="4" 
                                                   Text="{Binding MinTemp}" 
                                                   FontSize="16" 
                                                   FontAttributes="Bold" 
                                                   TextColor="#3B82F6" 
                                                   HorizontalOptions="Center" 
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- 日本地図パネル -->
        <Border Grid.Row="0" 
                Grid.Column="1" 
                Grid.RowSpan="2" 
                BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}" 
                Stroke="{AppThemeBinding Light={StaticResource BorderColor}, Dark={StaticResource BorderColorDark}}"
                StrokeThickness="1"
                StrokeShape="Rectangle"
                Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        BackgroundColor="{AppThemeBinding Light={StaticResource CardBackground}, Dark={StaticResource CardBackgroundDark}}" 
                        Padding="20,15" 
                        Stroke="#E5E7EB"
                        StrokeThickness="1"
                        StrokeShape="Rectangle">
                    <Label Text="🗾 日本地図" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                </Border>

                <!-- MapCanvas の背景色 -->
                <AbsoluteLayout Grid.Row="1" 
                        x:Name="MapCanvas" 
                        BackgroundColor="{AppThemeBinding Light={StaticResource MapBackground}, Dark={StaticResource MapBackgroundDark}}">
                    <GraphicsView x:Name="MapGraphicsView"
                                  AbsoluteLayout.LayoutBounds="0,0,1,1"
                                  AbsoluteLayout.LayoutFlags="All"
                                  Drawable="{Binding MapDrawable}" />
                </AbsoluteLayout>
            </Grid>
        </Border>

        <!-- ローディングオーバーレイ -->
        <Grid Grid.RowSpan="2" 
              Grid.ColumnSpan="2" 
              x:Name="LoadingOverlay" 
              BackgroundColor="#80000000" 
              IsVisible="False">
            <Border BackgroundColor="White" 
                    StrokeShape="RoundRectangle 10" 
                    WidthRequest="200" 
                    HeightRequest="150" 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center">
                <VerticalStackLayout HorizontalOptions="Center" 
                                     VerticalOptions="Center">
                    <Label Text="⏳" 
                           FontSize="48" 
                           HorizontalOptions="Center" />
                    <Label Text="読み込み中..." 
                           FontSize="16" 
                           Margin="0,20,0,0" 
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light={StaticResource TextPrimary}, Dark={StaticResource TextPrimaryDark}}" />
                </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>